@model List<CategoryListViewModel>
<div class="container">
<div>
        <div class="float-start">  <h2 style="color:#F6C649; font-weight:bold">Kategoriler</h2>  </div>
        <a href="/admin" class="btn btn-danger float-end ms-2">Geri Dön</a>
    <div class="float-end"> <a asp-area="Admin" asp-controller="Category" asp-action="New" class="btn btn-warning">Yeni Kategori</a> </div>

</div>

<div style="padding-top:75px">

    <table class="table table-striped table-dark">
        <thead>

            <tr>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Summary</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                    </td>
                </tr>
            }

        </tbody>



    </table>


</div>
</div>