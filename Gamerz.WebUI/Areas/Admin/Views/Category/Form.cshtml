@model CategoryFormViewModel
<div class="row">


    <div class="offset-2 col-8">

        <div class="card" style="border:solid 2px;background-color:#4A171E;opacity:0.9">

            <div class="card-header fw-bold fs-5" style="font-size:large;color:#F6C649">
                @(Model.Id == 0 ? "Kategori Ekleme Formu" : "Kategori Güncelleme Formu")
            </div>

            <div class="card-body">

        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Save">


            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="row mb-3">
                        <label style="font-size:large;color:#F6C649" asp-for="Name" class="col-sm-2 col-form-label">Kategori İsmi</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger fw-bold mt-1" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row mb-3">
                        <label style="font-size:large;color:#F6C649" asp-for="Description" class="col-sm-2 col-form-label">Kategori Açıklaması</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                    <span class="text-danger fw-bold mt-1" asp-validation-for="Description"></span>
                </div>
            </div>
            

            <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Kaydet" : "Güncelle")</button>

                    <a href="/admin" class="btn btn-outline-danger">Geri Dön</a>
        </form>
            </div>
        </div>
    </div>
        
</div>
