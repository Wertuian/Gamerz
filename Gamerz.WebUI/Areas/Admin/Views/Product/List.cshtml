@model List<ListProductViewModel>

<div>
    <div class="float-start">  <h2 style="color:#F6C649">Ürünler</h2>  </div>
    <div class="float-end"> <a asp-area="Admin" asp-controller="Product" asp-action="New" class="btn btn-primary">Yeni Ürün</a> </div>

</div>

<div style="padding-top:75px">


    <table id="productTable" class="table-hover table-striped">
        <thead>
            <tr>
                <th></th>
                <th style="font-size:large;color:#F6C649" id="ProductId">Ürün Adı</th>
                <th style="font-size:large;color:#F6C649" id="ProductModelName">Ürün Modeli</th>
                <th style="font-size:large;color:#F6C649">Birim Fiyatı</th>
                <th style="font-size:large;color:#F6C649">Stok Miktarı</th>
                <th style="font-size:large;color:#F6C649">Kategori</th>
                <th style="font-size:large;color:#F6C649"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @if (string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <img src="~/images/products/NoImage.jpg" width="155" height="155" />
                        }
                        else
                        {

                            
                            <a href="~/images/products/@item.ImagePath" data-lightbox="@item.CategoryId" data-title="@item.Name">
                                <img src="~/images/products/@item.ImagePath" width="155" height="155" />
                            </a>








                        }


                    </td>


                    <td style="font-size:large;color:#F6C649">@item.Name</td>
                    <td style="font-size:large;color:#F6C649">@item.ProductModelName</td>
                    <td style="font-size:large;color:#F6C649">@item.UnitPrice</td>
                    <td style="font-size:large;color:#F6C649">@item.UnitInStock</td>
                    <td style="font-size:large;color:#F6C649">@item.CategoryName</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">DÜZENLE</a>

                        <a href="#" class="btn btn-sm btn-danger btnDelete" data-id="@item.Id">
                            Sil
                        </a>

                    </td>
                </tr>
            }

        </tbody>


    </table>



</div>


@section Scripts{
    <script>

        var table = new DataTable('#productTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json',
               
            },
            pageLength: 3
        });
        
        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true,
            'maxWidth': 400,
            'maxHeight': 400,
            'fitImagesInViewPort': true
        })


        $('.btnDelete').click(function (e) {

            e.preventDefault(); 

            var productId = $(this).data('id'); 



            Swal.fire({
                title: 'Emin misiniz?',
                text: "Dikkat! Ürün silinecektir.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, onaylıyorum!',
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/admin/product/delete/' + productId,
                        method: 'GET' 
                    }).done(function () {
                        Swal.fire(
                            'Silindi!',
                            'Ürün başarıyla silindi.',
                            'success'
                        ).then(() => { window.location.reload() })
                    }).fail(function () {
                        Swal.fire(
                            'Hata!',
                            'Ürün bir hata ile karşılaşıldı. Silme işlemi gerçekleşemedi.',
                            'error'
                        )
                    })


                }
            })


        })



    </script>

 }