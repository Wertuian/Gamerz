@model List<CategoryViewModel>

<div class="list-group">

    <a asp-controller="Home" asp-action="Index" asp-route-categoryId="" style="background-color:#F6C649" asp-route-categoryName="" class="fw-bold list-group-item">Tüm Ürünler</a>

    @foreach (var item in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@item.Id" asp-route-categoryName="@item.Name" class="list-group-item" style="background-color:#F6C649">@item.Name</a>
    }


</div>