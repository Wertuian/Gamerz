@model RegisterViewModel

<div class="col-md-7 col-lg-8 mt-4">
    <h4 class="mb-3 fw-bold" style="font-size:x-large;color:#F6C649">Kayıt Formu</h4>
        <hr />
        <form method="post" asp-controller="Auth" asp-action="Register">
        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

          <div class="row g-3">
            <div class="col-sm-6">
                <label style="font-size:x-large;color:#F6C649" asp-for="Name" class="form-label required">İsim</label>
                <input style="opacity:0.9" asp-for="Name" type="text" class="form-control" placeholder="İsim" value="" >
                <span class="text-danger fw-bold mt-1" asp-validation-for="Name"></span>
            </div>

            <div class="col-sm-6">
                <label style="font-size:x-large;color:#F6C649" asp-for="LastName" class="form-label required">Soy İsim</label>
                <input style="opacity:0.9" asp-for="LastName" type="text" class="form-control" placeholder="Soy İsim" value="">
                <span class="text-danger fw-bold mt-1" asp-validation-for="LastName"></span>
                

            </div>
            <div class="col-sm-6">
                <label style="font-size:x-large;color:#F6C649" asp-for="Email" class="form-label required">Eposta</label>
                <input style="opacity:0.9" asp-for="Email" type="text" class="form-control" placeholder="Eposta" value="">
                <span class="text-danger fw-bold mt-1" asp-validation-for="Email"></span>
                
                
            </div>

            <div class="col-12">
                <label style="font-size:x-large;color:#F6C649" asp-for="Password" class="form-label required">Şifre</label>
              <div class="input-group has-validation">
                    <input style="opacity:0.9" asp-for="Password" type="password" class="form-control" placeholder="Şifre">
                    <span class="text-danger fw-bold mt-1" asp-validation-for="Password"></span>
                

              </div>
            </div>
            <div class="col-12">
                <label style="font-size:x-large;color:#F6C649" asp-for="PasswordConfirm" class="form-label required">Şifre Tekrarı</label>
                <div class="has-validation">
                    <input style="opacity:0.9" asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Şifre Tekrarı">
                    <span class="text-warning fw-bold mt-1" asp-validation-for="PasswordConfirm"></span>
 

                </div>
            </div>

            
          </div>

          <hr />
          <button class="w-100 btn btn-primary btn-lg" type="submit">Kayıt Ol!</button>
        </form>
      </div>